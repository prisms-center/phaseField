set Number of dimensions = 2

subsection rectangular mesh
    set size X = 2
    set size Y = 1
    set size Z = 1
    set subdivisions X = 1
    set subdivisions Y = 1
    set subdivisions Z = 1
end

set Refine factor = 5
set Element degree = 2

set Boundary condition for variable T = DIRICHLET: 0.0
set Boundary condition for variable q = NATURAL

subsection Linear solver parameters: T
    set Tolerance type = ABSOLUTE_RESIDUAL
    set Tolerance value = 1e-10
    set Maximum linear solver iterations = 1000 
    set Preconditioner = GMG
    set Smoothing range = 20
    set Smoother degree = 5
    set Eigenvalue CG iterations = 20
end