set dim = 2
set global refinement = 4
set degree = 2

subsection Rectangular mesh
  set x size = 30
  set y size = 6
  set x subdivisions = 5
  set y subdivisions = 1
end
set time step = 1.0e-1
set number steps = 10000

subsection output
  set condition = EQUAL_SPACING
  set number = 10
end

set boundary condition for u, x component = NonuniformDirichlet, Natural, Dirichlet: 0.0, Dirichlet: 0.0
set boundary condition for u, y component = Dirichlet: 0.0, Natural, Dirichlet: 0.0, Dirichlet: 0.0
set boundary condition for u_star, x component = NonuniformDirichlet, Natural, Dirichlet: 0.0, Dirichlet: 0.0
set boundary condition for u_star, y component = Dirichlet: 0.0, Natural, Dirichlet: 0.0, Dirichlet: 0.0
set boundary condition for P = Natural

subsection pinning point for P
  set value = 0.0
  set x = 30.0
  set y = 6.0
end

subsection linear solver parameters: P
  set tolerance type = AbsoluteResidual
  set tolerance value = 1e-5
  set max iterations = 1000
  set preconditioner type = GMG
  set smoothing range = 20
  set smoother degree = 5
  set eigenvalue cg iterations = 20
  set min mg level = 0
end
