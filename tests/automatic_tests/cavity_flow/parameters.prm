set dim = 3
set global refinement = 4
set degree = 1

subsection Rectangular mesh
  set x size = 1
  set y size = 1
  set z size = 1
  set x subdivisions = 1
  set y subdivisions = 1
  set z subdivisions = 1
end
set time step = 1.0e-3
set number steps = 50

subsection output
  set condition = EQUAL_SPACING
  set number = 5
end

set boundary condition for u, x component = Dirichlet: 0.0
set boundary condition for u, y component = Dirichlet: 0.0
set boundary condition for u, z component = Dirichlet: 0.0
set boundary condition for u_star, x component = Dirichlet: 0.0
set boundary condition for u_star, y component = Dirichlet: 0.0
set boundary condition for u_star, z component = Dirichlet: 0.0
set boundary condition for P = Natural

subsection linear solver parameters: P
  set tolerance type = AbsoluteResidual
  set tolerance value = 1e-5
  set max iterations = 1000
  set preconditioner type = GMG
  set smoothing range = 20
  set smoother degree = 5
  set eigenvalue cg iterations = 20
  set min mg level = 0
end